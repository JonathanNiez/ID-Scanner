<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gray" /> <!-- Shape color -->
            <corners android:radius="8dp" /> <!-- Shape corner radius -->
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="1dp"
        android:right="1dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Shadow color -->
            <corners android:radius="8dp" /> <!-- Shadow corner radius -->
        </shape>
    </item>

</layer-list>